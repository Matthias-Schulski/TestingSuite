[Unit]
Description=Refurb All-in-One Test Suite
After=network-online.target
Wants=network-online.target
Wants=refurb-x.service
After=refurb-x.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 /opt/refurb-scripts/main.py
WorkingDirectory=/opt/refurb-scripts
StandardInput=tty
StandardOutput=tty
TTYPath=/dev/tty1
TTYReset=yes
Restart=no

[Install]
WantedBy=multi-user.target
